{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "make",
            "args": [
                "all",
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$gcc"
        },
        {
            "label": "qemu-system-aarch64",
            "type": "shell",
            "isBackground": true,
            "dependsOn": "build",
            "command": "qemu-system-aarch64 -machine virt -monitor stdio -smp 1 -cpu cortex-a57 -m 128M -kernel './build/artkrnl/grubiso/sys/artkrnl' -serial vc -serial pipe:/tmp/guest -d guest_errors,int -s -S",
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "line": 1,
                            "column": 1,
                            "message": 1
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": {
                            "regexp": "."
                        },
                        "endsPattern": {
                            "regexp": "."
                        }
                    }
                }
            ]
        },
        {
            "label": "qemu-system-cleanup",
            "type": "process",
            "isBackground": true,
            "command": "pkill",
            "args": [
                "qemu"
            ],
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": ".",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": true,
                        "beginsPattern": ".",
                        "endsPattern": "."
                    }
                }
            ]
        }
    ]
}